<plugin xmlns="http://apache.org/cordova/ns/plugins/1.0"
    xmlns:rim="http://www.blackberry.com/ns/widgets"
    xmlns:android="http://schemas.android.com/apk/res/android"
    id="cordova-plugin-casai"
    version="4.4.2">
    <name>CAS Mobile Ads</name>
    <description>CAS.AI Cordova Plugin for Android and iOS</description>
    <license>Apache 2.0 License</license>
    <author email="support@cas.ai" href="https://cas.ai">Clever Ads Solutions LTD</author>
    <keywords>ads,mediation,monetization,mobile,admob</keywords>
    <repo>https://github.com/cleveradssolutions/CAS-Cordova</repo>
    <issue>https://github.com/cleveradssolutions/CAS-Cordova/issues</issue>
    <preference name="IOS_CAS_ID" default="demo" />
    <preference name="IOS_USER_TRACKING_USAGE" default="Your data will remain confidential and will only be used to provide you a better and personalised ad experience" />
    <js-module src="www/casai.js" name="CASMobileAds">
        <clobbers target="casai" />
    </js-module>
    <!-- android -->
    <platform name="android">
        <config-file target="res/xml/config.xml" parent="/*">
            <feature name="CASMobileAds" >
                <param name="android-package" value="com.cleveradssolutions.plugin.cordova.CASMobileAds"/>
                <param name="onload" value="true" />
            </feature>
        </config-file>
        <config-file target="AndroidManifest.xml" parent="/manifest/application">
            <meta-data
                android:name="com.google.android.gms.ads.DELAY_APP_MEASUREMENT_INIT"
                android:value="true"/>
        </config-file>

        <source-file src="src/android/CASMobileAds.kt" target-dir="app/src/main/java/com/cleveradssolutions/plugin/cordova" />
        <source-file src="src/android/ScreenContentCallback.kt" target-dir="app/src/main/java/com/cleveradssolutions/plugin/cordova" />
        <source-file src="src/android/CordovaEvents.kt" target-dir="app/src/main/java/com/cleveradssolutions/plugin/cordova" />
        <framework src="com.cleveradssolutions:cas-sdk:4.4.2" />
        <framework src="src/android/casplugin.gradle" custom="true" type="gradleReference" />
    </platform>
    <!-- ios -->
    <platform name="ios">
        <info>
The CAS.AI iOS will be configured for the ID '$IOS_CAS_ID'. Please define the registered CAS ID by &lt;variable name="IOS_CAS_ID" value="123456789"/&gt; in config.xml to configure iOS project.
        </info>
        <hook type="before_build" src="scripts/beforeIOSBuild.js" />
        <config-file target="config.xml" parent="/*">
            <feature name="CASMobileAds">
                <param name="ios-package" value="CASCMobileAds"/>
                <param name="onload" value="true" />
            </feature>
        </config-file>
        <source-file src="src/ios/CASCMobileAds.swift" />
        <framework src="AppTrackingTransparency.framework" weak="true" />
        <podspec>
            <config>
                <source url="https://cdn.cocoapods.org/"/>
                <source url="https://github.com/cleveradssolutions/CAS-Specs.git"/>
            </config>
            <pods use-frameworks="true">
                <pod name="CleverAdsSolutions-Base" spec="4.4.2" swift-version="5.0" />
            </pods>
        </podspec>
        <config-file target="*-Info.plist" parent="NSUserTrackingUsageDescription">
            <string>$IOS_USER_TRACKING_USAGE</string>
        </config-file>
        <config-file target="*-Info.plist" parent="GADDelayAppMeasurementInit">
            <true/>
        </config-file>
        <config-file target="*-Info.plist" parent="NSAppTransportSecurity">
            <dict>
                <key>NSAllowsArbitraryLoads</key>
                <true/>
                <key>NSAllowsLocalNetworking</key>
                <true/>
                <key>NSAllowsArbitraryLoadsForMedia</key>
                <true/>
                <key>NSAllowsArbitraryLoadsInWebContent</key>
                <true/>
            </dict>
        </config-file>
    </platform>
    <platform name="browser">
        <config-file target="config.xml" parent="/*">
            <feature name="CASMobileAds">
                <param name="browser-package" value="CASMobileAds" />
            </feature>
        </config-file>
        <js-module src="src/browser/casaiproxy.js" name="casaiproxy">
            <runs />
        </js-module>
    </platform>
</plugin>