<plugin xmlns="http://apache.org/cordova/ns/plugins/1.0"
    xmlns:rim="http://www.blackberry.com/ns/widgets"
    xmlns:android="http://schemas.android.com/apk/res/android"
    id="cordova-plugin-casai"
    version="4.5.1">
    <name>CAS Mobile Ads</name>
    <description>The CAS.AI Cordova plugin allows you to easily monetize your apps for iOS and Android using lot of Ads SDKs in mediation.</description>
    <license>Apache 2.0 License</license>
    <author email="support@cas.ai" href="https://cas.ai">Clever Ads Solutions LTD</author>
    <keywords>ads,mediation,monetization,mobile,admob</keywords>
    <repo>https://github.com/cleveradssolutions/CAS-Cordova</repo>
    <issue>https://github.com/cleveradssolutions/CAS-Cordova/issues</issue>
    <js-module src="www/casai.js" name="CASMobileAds">
        <clobbers target="casai" />
    </js-module>
    <platform name="android">
        <!-- Valid values "Optimal" and "Famileis" and "-" for none. -->
        <preference name="ANDROID_CAS_SOLUTIONS" default="-" />
        <!-- Valid values from adapter names: https://docs.page/cleveradssolutions/docs/Android/Mediated-Networks 
            For example: "googleAds,ironSource" -->
        <preference name="ANDROID_CAS_ADAPTERS" default="-" />
        <!-- Is allowed Google AD_ID to use. Valid values "true" and "false". -->
        <preference name="ANDROID_USE_AD_ID" default="true" />
        <hook type="after_plugin_install" src="scripts/android_after_plugin_install.js" />
        <config-file target="res/xml/config.xml" parent="/*">
            <feature name="CASMobileAds" >
                <param name="android-package" value="com.cleveradssolutions.plugin.cordova.CASMobileAds"/>
                <param name="onload" value="true" />
            </feature>
        </config-file>
        <source-file src="src/android/CASMobileAds.kt" target-dir="app/src/main/java/com/cleveradssolutions/plugin/cordova" />
        <source-file src="src/android/ScreenAdManager.kt" target-dir="app/src/main/java/com/cleveradssolutions/plugin/cordova" />
        <source-file src="src/android/ViewAdManager.kt" target-dir="app/src/main/java/com/cleveradssolutions/plugin/cordova" />
        <framework src="com.cleveradssolutions:cas-sdk:4.5.0" />
        <framework src="src/android/casplugin.gradle" custom="true" type="gradleReference" />
    </platform>
    <platform name="ios">
        <!-- In most cases, a CAS ID is the same as your app store ID. 
            You can leave the "demo" value only for testing purposes. -->
        <preference name="IOS_CAS_ID" default="demo" />
        <!-- Valid values "Optimal" and "Famileis" and "-" for none. -->
        <preference name="IOS_CAS_SOLUTIONS" default="-" />
        <!-- Valid values from adapter names: https://docs.page/cleveradssolutions/docs/iOS/Mediated-Networks 
            For example: "GoogleAds,IronSource" -->
        <preference name="IOS_CAS_ADAPTERS" default="-" />
        <!-- Required to display the App Tracking Transparency authorization request for accessing the IDFA -->
        <preference name="IOS_USER_TRACKING_USAGE" default="Your data will remain confidential and will only be used to provide you a better and personalised ad experience" />
        <framework src="AppTrackingTransparency.framework" weak="true" />
        <hook type="before_compile" src="scripts/ios_before_compile.js" />
        <hook type="after_plugin_install" src="scripts/ios_after_plugin_install.js" />
        <hook type="before_plugin_uninstall" src="scripts/ios_before_plugin_uninstall.js" />
        <config-file target="config.xml" parent="/*">
            <feature name="CASMobileAds">
                <param name="ios-package" value="CASMobileAds"/>
                <param name="onload" value="true" />
            </feature>
        </config-file>
        <source-file src="src/ios/CASMobileAds.swift" />
        <source-file src="src/ios/CASScreenAdManager.swift" />
        <source-file src="src/ios/CASViewAdManager.swift" />
        <podspec>
            <config>
                <source url="https://github.com/CocoaPods/Specs.git"/>
                <source url="https://github.com/cleveradssolutions/CAS-Specs.git"/>
            </config>
            <pods use-frameworks="true">
                <pod name="CleverAdsSolutions-Base" spec="4.5.0" swift-version="5.0" />
            </pods>
        </podspec>
        <config-file target="*-Info.plist" parent="CASAIAppIdentifier">
            <string>$IOS_CAS_ID</string>
        </config-file>
        <config-file target="*-Info.plist" parent="NSUserTrackingUsageDescription">
            <string>$IOS_USER_TRACKING_USAGE</string>
        </config-file>
    </platform>
    <platform name="browser">
        <config-file target="config.xml" parent="/*">
            <feature name="CASMobileAds">
                <param name="browser-package" value="CASMobileAds" />
            </feature>
        </config-file>
        <js-module src="src/browser/casaiproxy.js" name="casaiproxy">
            <runs />
        </js-module>
    </platform>
</plugin>